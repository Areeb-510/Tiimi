                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                />

                            <LinearLayout
                                android:padding="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
